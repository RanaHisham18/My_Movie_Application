<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/black">



            <ImageView
                android:id="@+id/popular_IV"
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:layout_marginStart="8dp"
                app:srcCompat="@android:drawable/ic_dialog_email"
                app:layout_constraintBottom_toTopOf="@+id/popularfilmname_Tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/popularfilmname_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/popular_IV"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="18dp"
                android:text="Film Name"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/popularfilmcategory_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="film category"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginStart="18dp"
                app:layout_constraintTop_toBottomOf="@+id/popularfilmname_Tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/popularratingstar_IV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/popularfilmcategory_TV"
                app:srcCompat="@android:drawable/btn_star_big_on" />

            <TextView
                android:id="@+id/ratingnumber_count_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/popularfilmcategory_TV"
                app:layout_constraintStart_toEndOf="@id/popularratingstar_IV"/>


    <TextView
        android:id="@+id/ratingnumber_average_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_goneMarginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@id/ratingnumber_count_TV"
        app:layout_constraintStart_toEndOf="@id/ratingnumber_count_TV"
       />


</androidx.constraintlayout.widget.ConstraintLayout>



